@using Model.ViewModel

@model List<ProductDetailModel>

@if (Model.Count > 0)
{
    foreach (var item in Model)
    {
        <div class="form-group">

            @Html.LabelFor(i => item.Price, new { @class = "control-label col-md-3" })

            <div class="col-md-9">
                @Html.TextBoxFor(i => item.Price, new { @class = "form-control" })
                @Html.ValidationMessageFor(i => item.Price, "", new { @class = "text-danger" })
            </div>
        </div>
    }
}

