@using Model.EF;
@model List<v_Product>

@if (Model.Count() > 0)
{

    var ItemFirst = Model.FirstOrDefault();
    var catName = ItemFirst.CategoryName;
    var catID = ItemFirst.CategoryId;
    <h3 style="margin-bottom: 30px">Sản phẩm cho bạn</h3>
    <div class="service-grids">

        @foreach (var item in Model)
        {
            string link = Url.Action(item.ProductAlias + "-" + item.ProductId, item.CategoryAlias + "-" + item.CategoryId);
            <div class="col-md-3 col-sm-4 col-xs-6 col-min-12">
                <div class="arrival-grid simpleCart_shelfItem bounceInLeft productOfYou">
                    <div class="grid-arr">
                        <div class="grid-arrival">
                            <figure>
                                <a href="@link" class="new-gri">
                                    <div class="grid-img">
                                        <img src="@Url.Content("~/Images/Products/medium/" + item.Image) " class="img-responsive" alt="" height="223">
                                    </div>
                                </a>
                            </figure>
                        </div>
                        <div class="women">
                            <div class="gr_price">
                                <h6><a href="@link">@item.ProductName</a></h6>
                                <span class="hide gia_km"></span>
                                <p class="item_price gia_ban">@item.ProductPrice.ToString("N0") VNĐ</p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="clearfix"></div>
    </div>
}
