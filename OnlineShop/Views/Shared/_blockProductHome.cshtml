@using Model.ViewModel;
@model  IEnumerable<ProductsView>

<h3 style="margin-bottom: 30px">Sản phẩm cho bạn</h3>
<div class="service-grids">

    @foreach (var item in Model)
    {
        string link = Url.Action(item.MetaTitle + "-" + item.ID, item.CatMetaTitle + "-" + item.CategoryID);
        
        <div class="col-md-3 col-sm-4 col-xs-6 col-min-12">
            <div class="arrival-grid simpleCart_shelfItem bounceInLeft productOfYou">
                <div class="grid-arr">
                    <div class="grid-arrival">
                        <figure>
                            <a href="@link" class="new-gri">
                                <div class="grid-img">
                                    <img src="@Url.Content("~/Images/Products/medium/"+ item.MoreImages) " class="img-responsive" alt="" height="223">
                                </div>
                            </a>
                        </figure>
                    </div>
                    <div class="women">
                        <div class="gr_price">
                            <h4><a href="@link">@item.Name</a></h4>
                            <span class="hide gia_km"></span>
                            <p class="item_price gia_ban">@item.Price.Value.ToString("N0") VND VNĐ</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="clearfix"></div>
</div>