@using OnlineShop.Helpers
@{
    Layout = null;
    string controllerName = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    ViewBag.ClassPage = String.IsNullOrWhiteSpace(ViewBag.ClassPage)?"": ViewBag.ClassPage;

    if (!String.IsNullOrWhiteSpace(controllerName) && controllerName == "Home")
    {
        ViewBag.ClassPage = ViewBag.ClassPage+" HomePage";
    }
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @SiteConfiguration.SiteName</title>
    <link href="~/Images/favicon.ico" rel="shortcut icon" type="image/vnd.microsoft.icon" />
    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300,400,400i,700" rel="stylesheet">
    @Styles.Render("~/assets/vegetarian/styles.css")
    
    <!--[if lt IE 9]>
