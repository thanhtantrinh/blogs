<body class="@ViewBag.ClassPage">

    <div class="header bg_header" id="home">
        <div class="container">
            <div class="col-md-12">
                @{ Html.RenderAction("_Header", "Home");}
            </div>
            @if (!String.IsNullOrWhiteSpace(controllerName) && controllerName != "Contact")
            {
                <div class="">
                    @{ Html.RenderAction("_Sliders", "Home"); }
                </div>
            }
            
        </div>
    </div>


    <article>
        <section class="content gallery pad1" style="padding:0">
            <div class="midle_main_idclass fix1200_cus1">
                @RenderBody()
            </div>
        </section>
    </article>

