@model List<Model.EF.Menu>
@{ 
    var baseurl = Request.Url.GetLeftPart(UriPartial.Authority) + Url.Content("~");
    int step = 1;
    int total = Model.Count();
}
<div class="menu menu_desktop">
    <ul>
        <li class=" active"><a class="" href="@baseurl"><span>Trang Chủ</span></a></li>

        @foreach (var item in Model)
        {         
            <li class="item-@item.ID @(step==total?"last":"") "><a class="" href="@baseurl@item.Link" target="@item.Target"><span>@item.Text</span></a></li>
            step++;
        }

        

