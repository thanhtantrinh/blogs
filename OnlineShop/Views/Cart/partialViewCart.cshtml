@using Model.ViewModel
@model List<CartItem>
@{
    decimal totalPrice = 0.0M;

    if (Model.Count > 0)
    {
        totalPrice = Model.Sum(x => x.Price * x.Quantity);
    }

}

<div class="panel panel-default">
    <div class="panel-heading"><i class="fa fa-cart-plus"></i> Giỏ hàng</div>
    <div class="panel-body">
        <div class="cart-inner media-body">
            <div class="text-center">
                <a href="@Url.Action("Index","Cart")" title="Xem giỏ hàng" rel="nofollow">
                    <i class="fa fa-cubes"></i> x @Model.Sum(s=>s.Quantity) = @totalPrice.ToString("N0") VNĐ
                </a>
            </div>            
        </div>
    </div>
</div>


