@using Model.ViewModel
@model List<CartItem>
@{
    decimal totalPrice = 0.0M;

    if (Model.Count > 0)
    {
        totalPrice = Model.Sum(x => x.Price * x.Quantity);
    }

}
<div class="cart-inner media-body">
    <a href="@Url.Action("Index","Cart")" title="Xem giỏ hàng" rel="nofollow">
        <ul class="list-inline">
            <li>@*<i class="fa fa-opencart"></i>*@Giỏ hàng: @Model.Count Sản phẩm</li>
            <li>@totalPrice.ToString("N0") VNĐ</li>
        </ul>
    </a>
</div>