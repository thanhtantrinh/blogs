@using Model.ViewModel
@using OnlineShop.Helpers
@model ContactModel
@{    
    Layout = null;
    var urlHelper = new UrlHelper(Html.ViewContext.RequestContext);
    var baseurl = HttpContext.Current.Request.Url.GetLeftPart(UriPartial.Authority);
    var mailto = "mailto:" + SiteConfiguration.EmailSite + "?subject=" + SiteConfiguration.SiteName + " hỗ trợ";
}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type" />
    <title>@SiteConfiguration.SiteName</title>
    <link href="~/Images/favicon.ico" rel="shortcut icon" type="image/vnd.microsoft.icon" />
    <style type="text/css">
        a:hover {
            text-decoration: none !important;
        }
    </style>
</head>
<body marginheight="0" topmargin="0" marginwidth="0" style="margin: 0px; background-color: #FFFFFF;" bgcolor="#FFFFFF" leftmargin="0">
    <table cellspacing="0" border="0" cellpadding="0" width="100%" bgcolor="#FFFFFF">
        <tr>
            <td height="20"></td>
        </tr>
        <tr>
            <td align="center">
                <table cellspacing="0" border="0" cellpadding="0" width="600" bgcolor="#FFFFFF">
                    <tr>
                        <td>
                            <!--header-->
                            <table bgcolor="#ffffff" style="background-color: #8ed8f8; margin:0 auto" width="600" border="0" align="center" cellpadding="0" cellspacing="0">
                                <tr>
                                    <td>
                                        <table width="600" border="0" cellspacing="0" cellpadding="0" style="background-color: #fefefe">
                                            <tr>
                                                <td align="center" valign="top" width="220">
                                                    <a href="@baseurl" title="@SiteConfiguration.SiteName" target="_blank">
                                                        <img src="@(baseurl + Url.Image("logo.png", true))" alt="image dsc" style="display:block; border:0" width="220" />
                                                    </a>
                                                </td>
                                                <td align="center" valign="middle" width="380" style="font-size: 18px; font-weight: bold; color: #009443; font-family: Arial, Helvetica, sans-serif; ">
                                                    THÔNG TIN HỖ TRỢ
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                            <!--/header-->
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <!--email container-->
                            <table bgcolor="#ffffff" cellspacing="0" border="0" align="center" cellpadding="0" width="600">
