                        &nbsp;&nbsp;
                        <i class="fa fa-user fa-eye"></i>&nbsp;@Model.ViewCount


                        @*<span class="btn btn-sm active float-right hidden-print"><i class="fa fa-eye fa-lg"></i>&nbsp;@Model.ViewCount</span>*@
                        <a href="#" class="btn btn-sm btn-info float-right" onclick="javascript:window.print();"><i class="fa fa-print"></i> Print</a>
